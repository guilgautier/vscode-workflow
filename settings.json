// CMD+Shift+P or View->Command palette->Preferences: Open Settings (JSON)
// An opinionated list of VS Code settings used by Guillaume Gautier guilgautier https://guilgautier.github.io/
{
    "breadcrumbs.enabled": true,
    // Explorer
    "explorer.sortOrder": "type",
    // Workbench
    "workbench.colorTheme": "Julia (Monokai Classic)",
    "workbench.activityBar.visible": true,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook",
        "*.pdf": "latex-workshop-pdf-hook"
    },
    "workbench.sideBar.location": "right",
    "workbench.statusBar.visible": true,
    "window.openFilesInNewWindow": "off",
    // Files
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    // Editor
    "editor.codeActionsOnSave": {
        "source.organizeImports": true
    },
    "editor.detectIndentation": true,
    "editor.fontSize": 13,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.insertSpaces": true,
    "editor.minimap.enabled": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "none",
    "editor.snippetSuggestions": "top",
    "editor.suggestOnTriggerCharacters": true,
    "editor.suggestSelection": "first",
    "editor.tabSize": 4,
    "editor.tokenColorCustomizations": null,
    "editor.wordWrap": "bounded",
    "editor.quickSuggestions": true,
    // native bracket pair colorization
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",
    // Terminal
    "terminal.integrated.inheritEnv": false,
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.fontFamily": "Meslo LG L DZ for Powerline",
    "terminal.integrated.commandsToSkipShell": [
        "language-julia.interrupt"
    ],
    // Intellicode
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    // LaTeX
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.chktex.enabled": true,
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.bibtex-format.tab": "4 spaces",
    "latex-workshop.bibtex-format.trailingComma": true,
    "latex-workshop.bibtex-format.sort.enabled": true,
    "latex-workshop.bibtex-fields.sort.enabled": true,
    // Julia https://github.com/invenia/BlueStyle#code-formatting
    "[julia]": {
        // https://github.com/invenia/BlueStyle#vs-code-settings
        "editor.defaultFormatter": "singularitti.vscode-julia-formatter",
        "editor.detectIndentation": false,
        "editor.formatOnSave": true,
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.wordWrapColumn": 92,
        "editor.rulers": [
            {
                "column": 92,
                "color": "#ff00FF"
            },
            100, // <- a ruler in the default color or as customized at column 0
            {
                "column": 120,
                "color": "#ff0000"
            }
        ],
        "files.insertFinalNewline": true,
        "files.trimFinalNewlines": true,
        "files.trimTrailingWhitespace": true
    },
    "juliaFormatter.style": "blue",
    "juliaFormatter.formatDocstrings": true,
    "julia.execution.codeInREPL": true,
    "julia.enableTelemetry": true,
    "julia.environmentPath": "",
    "julia.enableCrashReporter": true,
    "julia.additionalArgs": [],
    // Python
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        },
        "editor.formatOnSave": true,
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.wordWrapColumn": 80,
        "editor.rulers": [
            {
                "column": 80,
                "color": "#ff00FF"
            },
            100, // <- a ruler in the default color or as customized at column 0
            {
                "column": 120,
                "color": "#ff0000"
            }
        ]
    },
    "python.languageServer": "Pylance",
    "python.analysis.typeCheckingMode": "basic", // "off", "basic", "strict"
    "python.analysis.diagnosticMode": "workspace", // if you have some RAM to spare
    "python.pythonPath": "${workspaceFolder}/.venv/bin/python",
    "python.condaPath": "${env:HOME}/opt/anaconda3/bin/anaconda",
    "python.poetryPath": "${env:HOME}/.poetry/bin/poetry",
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    "python.formatting.provider": "black",
    "python.linting.enabled": true,
    "python.linting.lintOnSave": true,
    "python.terminal.activateEnvironment": false,
    "pythonIndent.trimLinesWithOnlyWhitespace": true,
    "autoDocstring.includeExtendedSummary": true,
    // Markdown
    "[markdown]": {
        "editor.tabSize": 2,
        "editor.quickSuggestions": true,
        "editor.codeActionsOnSave": {
            "source.fixAll.markdownlint": true
        }
    },
    // RestructuredText
    "restructuredtext.builtDocumentationPath": "${workspaceFolder}/docs/_build/html",
    "restructuredtext.confPath": "${workspaceFolder}/docs",
    "restructuredtext.languageServer.disabled": false,
    // TOML
    "[toml]": {
        "editor.defaultFormatter": "tamasfe.even-better-toml"
    },
    // GitHub Pull requests and Issues
    "githubPullRequests.fileListLayout": "flat",
    "diffEditor.renderSideBySide": false,
    // Spell checker
    "cSpell.enabled": true,
    "cSpell.language": "en,fr"
}
